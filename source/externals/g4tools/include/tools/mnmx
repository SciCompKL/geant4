#ifndef tools_mnmx
#define tools_mnmx

namespace tools {

template <class T>
inline T mn(const T& a,const T& b) {return min(a,b);}

template <class T>
inline T mx(const T& a,const T& b) {return max(a,b);}

// long name :
template <class T>
inline T min_of(const T& a,const T& b) {return min(a,b);}

template <class T>
inline T max_of(const T& a,const T& b) {return max(a,b);}

}

#endif
