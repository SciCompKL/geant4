#ifndef tools_mnmx
#define tools_mnmx

namespace tools {

template <class T, class S>
inline T mn(const T& a,const S& b) {return std::min(a,b);}

template <class T, class S>
inline T mx(const T& a,const S& b) {return std::max(a,b);}

// long name :
template <class T, class S>
inline T min_of(const T& a,const S& b) {return std::min(a,b);}

template <class T, class S>
inline T max_of(const T& a,const S& b) {return std::max(a,b);}

}

#endif
